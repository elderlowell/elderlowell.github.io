{
  "extends": "@vue/tsconfig/tsconfig.json",
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "include": ["./src/**/*", "./src/**/*.d.ts", "./src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
